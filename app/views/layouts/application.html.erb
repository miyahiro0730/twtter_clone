<!DOCTYPE html>
<html>
  <head>
    <title>TwClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation -->
    <header class="navigation">
      <nav class="navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="navbar-brand js-scroll-trigger">Twitter-Clone</div>
      </nav>
    </header>

    <%= yield %>

    <!-- Footer -->
    <footer class="copyright">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <span class="copyright">Copyright &copy; Tw_Clone 2018</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
