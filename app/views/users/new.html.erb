<!-- Header -->
<header class="masthead">
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading text-uppercase">ユーザー登録</div>

      <%= form_with(model: @user, local: true) do |f| %>
        <table class="login-form" align="center">
          <tr>
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name, :class=>"form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :email %></td>
            <td><%= f.email_field :email, :class=>"form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :password %></td>
            <td><%= f.password_field :password, :class=>"form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation %></td>
            <td><%= f.password_field :password_confirmation, :class=>"form-control" %></td>
          </tr>
          <tr>
            <td>プロフィール画像</td>
            <td>
              <%= f.file_field :image, id: :feed_image %>
              <!-- 確認画面から新規作成画面に戻った時に情報を保持するための記述 -->
              <%= f.hidden_field :image_cache %>
            </td>
          </tr>
        </table>

        <br />

        <%= f.submit "ユーザ登録", :class=>"btn btn-primary" %>
      <% end %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      </div>
    </div>
  </div>
</header>
